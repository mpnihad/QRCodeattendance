                    android:width="1dp"
                    android:color="#A5A1A1"/>
            </shape>
        </item>
        <item >
            <layer-list>

                <item>

                    <bitmap android:gravity="bottom|right"
                        android:src="@drawable/arrow" />

                </item>




            </layer-list>

        </item>


    </layer-list></item>
</selector>